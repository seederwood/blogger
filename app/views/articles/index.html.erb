<h1>All Articles</h1>

<ul id='articles'>
    <% @articles.reverse_each do |article| %>
    <li>
        <%= link_to article.title, article_path(article) %>
        <span class='smaller'><%= article.created_at %></span>
    </li>
    <% end %>
</ul>
<br/>
<%= link_to 'Create a New Article', new_article_path, class: 'new_article' %>
<br />
<%= link_to 'Show all Tags', tags_path %>
<% if logged_in? %>
    <%= link_to 'Show all Authors', authors_path %>
<% end %>
